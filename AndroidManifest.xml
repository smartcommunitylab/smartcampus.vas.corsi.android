<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smartcampus.android.template.standalone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smartuni_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Smartn_theme" >
        <meta-data
            android:name="SHARED_PACKAGE"
            android:value="smartcampus.android.template.standalone" />
        <meta-data
            android:name="ACCOUNT_TYPE"
            android:value="smartcampus.android.template.standalone" />
        <meta-data
            android:name="ACCOUNT_NAME"
            android:value="SmartCampus Android Template" />

        <activity
            android:name="eu.trentorise.smartcampus.template.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eu.trentorise.smartcampus.template.FileActivity"
            android:label="@string/title_activity_file" >
        </activity>
        <activity
            android:name="eu.trentorise.smartcampus.storage.dropbox.DropboxAuth"
            android:configChanges="orientation|keyboard" >
        </activity>
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask" >
            <intent-filter>
                <data android:scheme="db-yerhpkuav29wxou" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="eu.trentorise.smartcampus.ac.authenticator.AuthenticationService"
            android:exported="true"
            android:permission="eu.trentorise.smartcampus.ac.AUTHENTICATE" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <activity
            android:name="eu.trentorise.smartcampus.ac.authenticator.AuthenticatorActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="smartcampus.android.template.standalone.MyUniActivity"
            android:label="@string/title_activity_my_uni" >
        </activity>
        <activity
            android:name="smartcampus.android.template.standalone.NoticesActivity"
            android:icon="@drawable/notices_white"
            android:label="@string/title_activity_notices" >
        </activity>
        <activity
            android:name="smartcampus.android.template.standalone.MyAgendaActivity"
            android:configChanges="orientation|screenSize"
            android:icon="@drawable/myagenda_white"
            android:label="@string/title_activity_my_agenda" >
        </activity>
        <activity
            android:name="smartcampus.android.template.standalone.PHLActivity"
            android:icon="@drawable/phl_white"
            android:label="@string/title_activity_phl" >
        </activity>
        <activity
            android:name="smartcampus.android.template.standalone.FindHomeActivity"
            android:icon="@drawable/findcourses_white"
            android:label="@string/title_activity_find_courses"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="smartcampus.android.template.standalone.ResultSearchedActivity"
            android:icon="@drawable/findcourses_white"
            android:label="@string/title_activity_result_searched" >
        </activity>
        <activity
            android:name="smartcampus.android.template.standalone.FindRecensioniActivity"
            android:configChanges="orientation|screenSize"
            android:icon="@drawable/findcourses_white"
            android:label="@string/title_activity_find_recensioni" >
        </activity>
        <activity
            android:name="smartcampus.android.template.standalone.FindHomeCourseActivity"
            android:icon="@drawable/findcourses_white"
            android:label="@string/title_activity_find_home_course" >
        </activity>
        <activity
            android:name="android.smartcampus.datifuffa.Dati"
            android:label="@string/title_activity_dati" >
        </activity>
        <activity
            android:name="smartcampus.android.template.standalone.AddEventActivity"
            android:label="@string/title_activity_add_event" >
        </activity>
    </application>

</manifest>