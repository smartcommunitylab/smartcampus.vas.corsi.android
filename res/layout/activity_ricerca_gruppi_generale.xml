<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >
    </LinearLayout>
    <!-- questo lineralayout qui sopra serve solo a creare uno spazio -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/data_attivitastudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gds_materia" />

        <Spinner
            android:id="@+id/spinner_materie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/dataora_attivitastudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gds_name_of" />

        <Spinner
            android:id="@+id/spinner_nomi_gruppi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

