    <ExpandableListView
        android:id="@+id/expandableListViewRating"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:addStatesFromChildren="true"
        android:animateLayoutChanges="false"
        android:childDivider="#00000000"
        android:clipChildren="true"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:splitMotionEvents="true" >
    </ExpandableListView>
    <!-- android:paddingBottom="@dimen/activity_vertical_margin" -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/smartn_theme_color" />

    <EditText
        android:id="@+id/AddCommentRatingCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/rate_insert_review"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingTop="10dp" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/button_annulla_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/button_ok_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK" />
    </LinearLayout>

</LinearLayout>