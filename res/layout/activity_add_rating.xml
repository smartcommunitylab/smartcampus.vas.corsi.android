<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutRating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <!--
         <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/smartn_theme_color"
        android:paddingBottom="20dp"
        android:paddingTop="10dp" />
    -->

    <TextView
        android:id="@+id/textViewTitleRatingCourse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Valuta il corso!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/smartn_theme_color" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/smartn_theme_color"
        android:paddingBottom="15dp"
        android:paddingTop="10dp" />

    <ExpandableListView
        android:id="@+id/expandableListViewRating"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:addStatesFromChildren="true"
        android:animateLayoutChanges="false"
        android:childDivider="?android:attr/listDivider"
        android:clipChildren="true"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:splitMotionEvents="true" >
    </ExpandableListView>

    <EditText
        android:id="@+id/AddCommentRatingCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Inserisci il tuo commento..."
        
        android:focusable="true" 
        android:focusableInTouchMode="true"
        >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp" >

        <Button
            android:id="@+id/button_annulla_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/button_ok_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK" />
    </LinearLayout>

</LinearLayout>