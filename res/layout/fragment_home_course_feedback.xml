<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewTitleFeedbackLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/feedback_title_of_list"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ExpandableListView
        android:id="@+id/expandableListViewFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:addStatesFromChildren="true"
        android:animateLayoutChanges="false"
        android:childDivider="?android:attr/listDivider"
        android:clipChildren="true"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:splitMotionEvents="true" >
    </ExpandableListView>

    <TextView
        android:id="@+id/textViewTitleFeedbackCourse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/smartn_theme_color"
        android:text="Large Text"
        android:textColor="@color/white_smartn_theme"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>