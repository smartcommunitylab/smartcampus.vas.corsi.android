<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textViewTitleFeedbackCourse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Large Text"
        android:textColor="@color/smartn_theme_color"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/smartn_theme_color"
        android:paddingBottom="20dp"
        android:paddingTop="10dp" />
    <ExpandableListView
        android:id="@+id/expandableListViewFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:addStatesFromChildren="true"
        android:animateLayoutChanges="false"
        android:childDivider="?android:attr/listDivider"
        android:clipChildren="true"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:splitMotionEvents="true" >
    </ExpandableListView>



</LinearLayout>