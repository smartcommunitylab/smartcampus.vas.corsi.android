    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="30dp"
    tools:context=".MyUniActivity" >

