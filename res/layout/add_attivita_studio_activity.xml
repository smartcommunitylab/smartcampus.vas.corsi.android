<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/smartcampus.android.template.standalone"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Add_attivita_studio_activity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >

                <EditText
                    android:id="@+id/editText_oggetto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Oggetto" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingRight="20dp" >

                    <Button
                        android:id="@+id/data_button_gds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mybutton"
                        android:onClick="showDatePickerDialog"
                        android:padding="8dp"
                        android:text="Button" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="20dp" >

                    <Button
                        android:id="@+id/ora_button_gds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mybutton"
                        android:onClick="showTimePickerDialog"
                        android:padding="3dp"
                        android:text="Button" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >

                <EditText
                    android:id="@+id/editText_descrizione_impegno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="descrizione" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allega appunti e riferimenti:" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="vertical"
                        android:paddingRight="20dp" >

                        <ImageButton
                            android:id="@+id/btn_subscribe_gds"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/mybutton"
                            android:padding="3dp"
                            android:src="@drawable/phl" />

                        <TextView
                            android:id="@+id/tv_nome_gds_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="from phl" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:orientation="vertical"
                        android:paddingLeft="20dp" >

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/mybutton"
                            android:padding="3dp"
                            android:src="@drawable/filebrowser" />

                        <TextView
                            android:id="@+id/tv_info_studente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="from filebrowser" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servizi da monitorare" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:columnCount="2"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:rowCount="2" >

                    <CheckBox
                        android:id="@+id/CheckBox1_prenotazione_aule"
                        android:layout_gravity="left"
                        android:text="Prenotazione aule"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <CheckBox
                        android:id="@+id/CheckBox2_mensa"
                        android:layout_gravity="left"
                        android:text="Mensa"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <CheckBox
                        android:id="@+id/CheckBox3_tutoring"
                        android:layout_gravity="left"
                        android:text="Tutoring"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <CheckBox
                        android:id="@+id/CheckBox4_biblioteca"
                        android:layout_gravity="left"
                        android:text="Biblioteca"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>